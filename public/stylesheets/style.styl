/*
 * Variables
 */
$leftContainerWidth = 300px
$rightContainerWidth = 900px
$leftContainerMargin = 10px


/*
 * Defaults
 */
*
	padding: 0
	margin: 0

html
	height: 100%

body
	padding: 0
	margin: 0
	font: 14px "Comic Sans MS", Helvetica, Arial, sans-serif
	image: '/images/batthern.png'
	line-height: 21px
	font-weight: normal
	width: 1210px
	margin: 0 auto

a
	color: #00AEEF
	text-decoration: none

a:hover
	text-decoration: underline
	color: #008DC2

ul
	margin-left: 0
	padding-left: 40px
	list-style-type: square

li
	list-style-position: inside

p
	font-weight: normal

button
	padding: 10px

/*
 * Custom
 */
.content
	width: $leftContainerWidth + $rightContainerWidth + $leftContainerMargin
	float: left
	padding-top: 20px

.left-container
	width: $leftContainerWidth
	float: left
	margin-right: $leftContainerMargin
	.box:nth-child(2)
		height: 195px
	.box:nth-child(3)
		height: 103px

.right-container
	width: $rightContainerWidth
	float: left

.box
	background: linear-gradient(top, white, #E6E6E6)
	border-radius: 5px
	border: 3px solid black
	padding: 20px
	margin-bottom: 10px

.box:last-child
	margin-bottom: 0

#banner
	image: '/images/paradise.jpg'
	border-radius: 5px
	border: 3px solid black
	padding: 20px
	margin-bottom: 10px
	height: 154px
	color: white

#apps
	float: left
	width: 700px
	.app
		width: 294px

.app
	background: linear-gradient(top, white, #E6E6E6)
	border-radius: 5px
	border: 3px solid black
	padding: 20px
	margin-bottom: 10px
	margin-right: 10px
	float: left

#technologies
	position: relative
	top: 20px
	height: 200px
	float: left
	width: 200px
	.box
		height: 224px

.app:hover
	background: linear-gradient(top, #7694E0 , white)
	cursor: pointer

#app-pic
	background:url('/images/apppics.jpg') repeat 0px 0px
	height: 142px
	width: 684px
	border-radius: 5px
	border: 3px solid black
	float: left
	background-position: 0px 0px

#back-btn
	position: fixed
	top: 20px
	left: 20px

#numClients
	position: fixed
	top: 30px
	left: 120px
	font-weight: bold
	color: blue

.weather-container
	display: none
	overflow: hidden
	width: 1205px
	float: left
	margin-top: 10px
	background-color: white
	height: 400px
	border-radius: 5px
	border: 3px solid black
	text-align: center
	#weather-title
		height: 100px
		background: linear-gradient(top, white, #E6E6E6)
		border-bottom: 1px solid black
		h2
			padding-top: 35px
	.weather-day
		float: left
		width: 172px
		height: 299px
		padding-top: 20px
	.weather-day:nth-child(even)
		background: linear-gradient(bottom, white, #B6C0DF)
	.weather-day:nth-child(odd)
		background: linear-gradient(top, white, #B6C0DF)
	.weather-day:last-child
		width: 173px
	.weather-date, .weather-week
		font-weight: bold
	.weather-desc
		font-weight: bold
		padding-bottom: 10px

.more-apps
	float: left;
	margin-top: 10px
	width: 100%;
	.app
		width: 554px
		height: 340px
		.image
			padding-top: 15px
			text-align: center
		a
			color: black
			text-decoration: none
	.app:nth-child(even)
		margin-right: 0

canvas.loaded
	cursor: url("/images/pencil.gif"), auto

footer
	height: 100px
	clear: both
	width: 100%
	text-align: center
	color: white
	image: '/images/dash.png'
	margin-bottom: 20px
	div
		padding-top: 40px